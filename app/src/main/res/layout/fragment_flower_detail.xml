<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CartFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/back_icon"
        android:elevation="2dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_back" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/detail_flower_image"
        android:layout_width="match_parent"

        android:layout_height="380dp"
        android:clipToOutline="true"
        android:scaleType="fitXY" />

    <androidx.cardview.widget.CardView
        android:elevation="4dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/detail_flower_image"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="50dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="9dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_baseline_favorite_24" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="340dp"
        android:background="@drawable/detail_fragment_bg"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/flower_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:text="Jannien Flower Bouquet"
            android:textColor="@color/white"
            android:textSize="23sp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/flower_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flower_name"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:text="â‚¹567.00"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/flower_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:text="Lorem lpsum is simple dummy text of the printing and typesetting industry. Lorem lpsum has been the industry's standard dummy text ever since the 1500s."

            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_to_cart_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/add_cart_bg"
                android:text="Add to Cart">


            </androidx.appcompat.widget.AppCompatButton>

        </RelativeLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>