<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FlowerDetailsFragment">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_btn_fav_fragment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_back">

    </com.google.android.material.button.MaterialButton>


    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider_fav"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@id/back_btn_fav_fragment"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

    </com.denzcoskun.imageslider.ImageSlider>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/image_slider_fav"
        android:background="@drawable/fav_fragment_bg">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/jannien_flower_bouquet"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold">

        </androidx.appcompat.widget.AppCompatTextView>

    </RelativeLayout>

</RelativeLayout>
